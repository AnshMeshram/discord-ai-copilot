{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": "..",
    "paths": {
      "@/*": ["*"]
    },
    "ignoreDeprecations": "6.0",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "types": ["node"]
  },
  "include": ["src/**/*", "../lib/**/*"],
  "exclude": ["node_modules", "dist"]
}
